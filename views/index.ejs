<%- include ('partials/header') %>

    <div class="container">
        <h1 class="text-center mt-3 mb-4">
            <%= title %>
        </h1>
        <a href="/create" class="btn btn-info text-white"><i class="fas fa-user-plus"></i></a>
        <%if(records.length>0){ %>


            <table class="table table-striped table-hover">

                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Skill</th>
                        <th scope="col">Department</th>

                    </tr>
                </thead>

                <tbody>
                    <%records.forEach(record=>{ %>
                        <tr>
                            <td>
                                <a href="/show/<%= record._id %>">
                                    <%= record.name %>
                                </a>

                            </td>
                            <td>
                                <%= record.skill %>
                            </td>
                            <td>
                                <%= record.department %>
                            </td>

                        </tr>

                </tbody>
                <%})%>
            </table>

            <% }else{%>
                <h3 class="text-danger">There is no record to display</h3>
                <% }%>
    </div>
    <%- include ('partials/footer') %>